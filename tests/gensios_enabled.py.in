def check_gensio_enabled(g):
    return gensios_enabled[g]

def check_iostr_gensios(s):
    while True:
        c = s.find(",")
        if c == -1:
            c = len(s)
        p = s.find("(")
        if p == -1:
            p = len(s)
        if (c < p):
            g = s[:c]
            s = s[c + 1:]
        else:
            g = s[:p]
            p = s.find(")")
            s = s[p + 2:]

        if not gensios_enabled[g]:
            print("Gensio %s is not enabled, test skipped" % g)
            sys.exit(77)

        if g in final_gensios:
            break

